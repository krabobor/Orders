@using w1.Helpers
@using w1.Models
@model IEnumerable<w1.Models.Nomenclature>
@{
    ViewBag.Title = "Товары";
}

<body>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Unit)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayEnumFor(modelItem => item.Unit, typeof(Nomenclature.Units))
            </td>
            <td>
                @Html.ActionLink("Редактировать\t", "EditNomenclature", new { id = item.Id }) 
            </td>
        </tr>
        }
    </table>
    <p>
        @Html.ActionLink("Создать", "EditNomenclature")
    </p>
</body>